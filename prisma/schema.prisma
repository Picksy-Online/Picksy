// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // This will be the Clerk User ID
  email     String   @unique
  name      String?
  avatarUrl String?
  role      String   @default("USER") // "USER" or "ADMIN"
  
  storeName String?
  bio       String?
  postcode  String?
  birthDate String?
  privateCollectionPassword String?
  
  friendIds String? // JSON string
  blockedSellerIds String? // JSON string
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  orders   Order[]   @relation("BuyerOrders")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String
  imageUrls   String // JSON string
  imageHint   String?
  year        Int?
  
  // Coin Specifics
  denomination String?
  country     String?
  
  // Grading Specifics
  isGraded    Boolean  @default(false)
  gradingCompany String?
  grade       String?
  certNumber  String?
  
  sellerId    String
  seller      User     @relation(fields: [sellerId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

enum OrderStatus {
  ORDER_PLACED
  SHIPPED_TO_HUB
  HUB_VERIFYING
  VERIFIED_LEGIT
  VERIFICATION_FAILED
  SHIPPED_TO_BUYER
  DELIVERED
  CANCELLED
}

model Order {
  id              String      @id @default(cuid())
  buyerId         String
  buyer           User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  totalAmount     Float
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  status          OrderStatus @default(ORDER_PLACED)
  
  trackingToHub   String?
  trackingToBuyer String?
  verificationNotes String?
  hubId           String?

  items           OrderItem[]
  shipments       Shipment[]
}

model OrderItem {
  id              String      @id @default(cuid())
  orderId         String
  order           Order       @relation(fields: [orderId], references: [id])
  productId       String
  product         Product     @relation(fields: [productId], references: [id])
  
  verificationStatus String   @default("PENDING") // VerificationStatus
  verificationNotes  String?
  verifiedBy         String?
  
  intakePhotos       String? // JSON string
}

model Shipment {
  id              String        @id @default(cuid())
  orderId         String
  order           Order         @relation(fields: [orderId], references: [id])
  
  carrier         String
  trackingNumber  String
  labelUrl        String?
  
  type            String        // ShipmentType
  
  status          String        @default("CREATED") // ShipmentStatus
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model WantedItem {
  id          String   @id
  title       String
  description String
  targetPrice Float
  category    String
  creatorId   String
  imageUrl    String?
  createdAt   DateTime @default(now())
}
